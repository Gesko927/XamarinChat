<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeroChatClient.Views.RegistrationPage"
             BackgroundImage="MainBackground">
    <ScrollView>
        <StackLayout
            Padding="30"
            VerticalOptions="Center">
            <Image 
                Source="Chat"
                Aspect="AspectFit"/>
            <Frame
                BackgroundColor="#c7623e"
                CornerRadius="13">
                <StackLayout>
                    <Entry 
                        x:Name="UsernameEntry"
                        Placeholder="Username"
                        Completed="UsernameEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="PasswordEntry"
                        Placeholder="Password" 
                        Completed="PasswordEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="FirstNameEntry"
                        Placeholder="First Name" 
                        Completed="FirstNameEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="LastNameEntry"
                        Placeholder="Last Name"
                        Completed="LastNameEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="EmailEntry"
                        Placeholder="Email"
                        Completed="EmailEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="CountryEntry"
                        Placeholder="Country"
                        Completed="CountryEntry_OnCompleted"
                        Style="{StaticResource Key=EntryStyle}"/>
                    <Entry 
                        x:Name="AgeEntry"
                        Placeholder="Age" 
                        Completed="AgeEntry_OnCompleted"
                        Keyboard="Numeric"
                        Style="{StaticResource Key=EntryStyle}"/>
                </StackLayout>
            </Frame>
            <Button 
                x:Name="SignUpBtn"
                Text="Sign Up"
                BorderRadius="20"
                Style="{StaticResource Key=BaseButtonStyle}"
                Clicked="SignUpBtn_OnClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>